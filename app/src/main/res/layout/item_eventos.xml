<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:orientation="vertical"
    android:baselineAligned="false">



    <!-- A CardView that contains another views -->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_evento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true"
        tools:ignore="InefficientWeight,ObsoleteLayoutParam,RtlHardcoded"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:ignore="DisableBaselineAlignment,UselessParent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.52"
                    android:background="@color/colorAccent"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:id="@+id/evento_fecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,NestedWeights,ObsoleteLayoutParam,RtlHardcoded,RtlSymmetry,UnusedAttribute"
                        android:paddingTop="4dp"
                        android:contextClickable="false"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:paddingBottom="4dp"
                        android:padding="4dp"
                        android:paddingEnd="4dp"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textColor="@color/cardview_light_background"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/evento_horario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:layout_alignParentStart="true"
                        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:textColor="@color/cardview_light_background" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/evento_titulo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="@color/primary_text"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,ObsoleteLayoutParam,UnknownId"
                        android:layout_below="@+id/linearLayout"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:layout_weight="1"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/evento_lugar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:layout_below="@id/evento_titulo"
                        android:layout_alignParentStart="true"
                        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textColor="@color/primary_text" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_gravity="right"
                        android:id="@+id/layoutSocial">

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/calendar_plus"
                            android:id="@+id/evento_agregar"
                            android:background="@color/cardview_light_background"
                            tools:ignore="ContentDescription,VectorDrawableCompat"
                            android:layout_weight="1" />

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_share_variant_grey600_24dp"
                            android:id="@+id/evento_compartir"
                            android:background="@color/cardview_light_background"
                            android:contentDescription=""
                            tools:ignore="ContentDescription"
                            android:layout_gravity="right"
                            android:layout_weight="1" />

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/heart_outline"
                            android:id="@+id/evento_agregar_favoritos"
                            android:background="@color/cardview_light_background"
                            tools:ignore="ContentDescription,UnusedAttribute,VectorDrawableCompat"
                            android:layout_gravity="right"
                            style="@style/AppTheme"
                            android:layout_weight="1" />

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/tw__composer_logo_blue"
                            android:id="@+id/btnTwitter"
                            android:background="@color/cardview_light_background"
                            tools:ignore="ContentDescription,UnusedAttribute,VectorDrawableCompat"
                            android:layout_gravity="right"
                            style="@style/AppTheme"
                            android:layout_weight="1" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

     </android.support.v7.widget.CardView>


</LinearLayout>
