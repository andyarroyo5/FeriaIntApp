<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:weightSum="1">

    <!-- A CardView that contains another views -->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_cont_cult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        tools:ignore="InefficientWeight"
        android:layout_weight="0.51"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:background="@color/accent">

                <TextView
                    android:id="@+id/contenido_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Text"
                    android:layout_gravity="bottom"
                    android:background="#8c000000"
                    android:textColor="#ffe3e3e3"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,ObsoleteLayoutParam"
                    android:layout_weight="1"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription,ObsoleteLayoutParam"
                    android:layout_weight="1"
                    android:id="@+id/contenido_img_portada"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:text="Relaciones Internacionales"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txtTemaNombre"
                    android:gravity="center_vertical"
                    tools:ignore="HardcodedText"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_share_variant_grey600_24dp"
                    android:id="@+id/imageButton"
                    android:layout_weight="1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="6dp"
                    android:background="@color/cardview_light_background"
                    tools:ignore="ContentDescription,InefficientWeight,NestedWeights,ObsoleteLayoutParam,Suspicious0dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/heart_outline"
                    android:id="@+id/evento_agregar_favoritos"
                    android:layout_weight="1"
                    android:background="@color/cardview_light_background"
                    tools:ignore="ContentDescription,RtlHardcoded,UnusedAttribute,VectorDrawableCompat"
                    android:layout_gravity="right"
                    style="@style/AppTheme" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
